<Project DefaultTargets="Build" ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Release</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{D0E4F3BF-0000-0000-0000-000000000001}</ProjectGuid>
    <OutputType>Library</OutputType>
    <RootNamespace>WinlatorXRBridge</RootNamespace>
    <AssemblyName>WinlatorXRBridge</AssemblyName>
    <TargetFrameworkVersion>v4.7.2</TargetFrameworkVersion>
    <OutputPath>..\..\artifacts\</OutputPath>
    <DebugType>portable</DebugType>
    <Deterministic>true</Deterministic>
    <NoStdLib>false</NoStdLib>
  </PropertyGroup>

  <!-- References to Unity, BepInEx, Harmony, and .NET assemblies -->
  <ItemGroup>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..\..\lib\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine">
      <HintPath>..\..\lib\UnityEngine.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="BepInEx">
      <HintPath>..\..\lib\BepInEx.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="HarmonyLib">
      <HintPath>..\..\lib\HarmonyLib.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- Standard .NET references -->
    <Reference Include="mscorlib" />
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Net" />
    <Reference Include="System.Net.Sockets" />
    <Reference Include="System.Numerics" />
    <Reference Include="System.Threading" />
  </ItemGroup>

  <!-- Source files -->
  <ItemGroup>
    <Compile Include="Plugin.cs" />
    <Compile Include="WinlatorXRListener.cs" />
    <Compile Include="WinlatorXRTypes.cs" />
  </ItemGroup>

  <!-- Import standard C# targets (multiple fallbacks for different runner setups) -->
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" Condition="Exists('$(MSBuildToolsPath)\Microsoft.CSharp.targets')" />
  <Import Project="$(MSBuildBinPath)\Microsoft.CSharp.targets" Condition="Exists('$(MSBuildBinPath)\Microsoft.CSharp.targets')" />
  <Import Project="C:\Program Files (x86)\MSBuild\Microsoft.CSharp.targets" Condition="Exists('C:\Program Files (x86)\MSBuild\Microsoft.CSharp.targets')" />
  <Import Project="C:\Program Files (x86)\MSBuild\14.0\Bin\Microsoft.CSharp.targets" Condition="Exists('C:\Program Files (x86)\MSBuild\14.0\Bin\Microsoft.CSharp.targets')" />
  <Import Project="$(MSBuildToolsPath)\Microsoft.Common.targets" Condition="Exists('$(MSBuildToolsPath)\Microsoft.Common.targets')" />
</Project>
